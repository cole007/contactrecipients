{% import "_includes/forms" as forms %}

{% includeCssResource "contactrecipients/css/ContactRecipients_Style.css" %}
{% includeJsResource "contactrecipients/js/ContactRecipients_Script.js" %}


{% set paramRows = [] %}
{% for row in settings.recipients %}
	{% set paramRows = paramRows | merge([{ subject: row.subject, recipient: row.recipient }]) %}
{% endfor %}

{{ forms.editableTableField({
    label: 'Some Setting',
    instructions: 'Enter some setting here.',
    id: 'recipients',
    name: 'recipients', 
    rows: paramRows,
    cols: {
    	subject: {type: 'singleline', heading: "Subject"|t, class: 'code'},
    	recipient: {type: 'singleline', heading: "Recipient"|t}
    },    
    value: settings['recipients']})
}}
